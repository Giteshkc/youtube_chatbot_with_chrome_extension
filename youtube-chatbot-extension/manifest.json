{
  "manifest_version": 3,
  "name": "YouTube Video Chatbot",
  "version": "1.0",
  "description": "Ask questions about YouTube videos using AI.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",  
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://127.0.0.1:5000/*",
    "https://*.youtube.com/*"
  ]
}